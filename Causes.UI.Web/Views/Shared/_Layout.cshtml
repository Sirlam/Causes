<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Causes.org | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img alt="Logo" src="~/images/logo.png">
                </a>
            </div>
            <form class="navbar-form center-block navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Find causes">
                </div>
                <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-search"></i> Find</button>
            </form>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    <p class="navbar-text navbar-right"><button type="submit" class="btn btn-warning">Logout</button></p>
                }
            }
            else
            {
                <p class="navbar-text navbar-right">@Html.ActionLink("Login", "Login", "Account", new { @class = "btn btn-warning" })</p>
            }

        </div>
    </nav>

    <div class="clearfix"></div>

